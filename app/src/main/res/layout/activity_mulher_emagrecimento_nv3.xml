<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_mulher_emagrecimento"
    tools:context=".mulher_emagrecimento_nv3">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/textEmagrecimento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D5008545"
                android:gravity="center"
                android:padding="9dp"
                android:text="@string/emagrecimento"
                android:textColor="@color/white"
                android:textSize="24sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/bttAvancado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/avan_ado"
                android:textSize="18sp"
                app:backgroundTint="#AE006A33" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageView
                android:contentDescription="emaA"
                android:id="@+id/imageView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/treino_mulher_emarecimento_a" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageView
                android:contentDescription="emaB"
                android:id="@+id/imageView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/treino_mulher_emarecimento_b" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageView
                android:contentDescription="emaC"
                android:id="@+id/imageView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/treino_mulher_emarecimento_c" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageView
                android:contentDescription="emaD"
                android:id="@+id/imageView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/treino_mulher_emarecimento_d" />

        </LinearLayout>
    </ScrollView>






</androidx.constraintlayout.widget.ConstraintLayout>