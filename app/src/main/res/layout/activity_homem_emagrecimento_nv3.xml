<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_homem_emagrecimento"
    tools:context=".homem_emagrecimento_nv3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="149dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textEmagrecimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5008545"
            android:gravity="center"
            android:padding="9dp"
            android:text="@string/emagrecimento"

            android:textColor="@color/white"
            android:textSize="24sp" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />


        <Button
            android:id="@+id/bttAvancado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/avan_ado"
            android:textSize="18sp"
            app:backgroundTint="#AE006A33" />

        <ImageView
            android:contentDescription="emaA"
            android:layout_margin="10dp"
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/treino_homem_emagrecimento_a" />

        <ImageView
            android:layout_margin="10dp"
            android:contentDescription="emaB"
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/treino_homem_emagrecimento_b" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>